<%= render "main/hero" %>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<h2>User Profile</h2>
			<h3>User name: <%= @user.email %></h3>

			<div id="shopping-lists" class="well well-small span6">
				<h4>Shopping Lists</h4>
				<ul>
					<% @shopping_lists.each do |shopping_list| %>
						<li
						><a href="<%= shopping_list_path(shopping_list) %>"><%= shopping_list.name %></a>
						<a href="#delete-list-modal" class="btn btn-danger btn-mini" data-toggle="modal">Delete this list</a>
						<div id="delete-list-modal" class="modal hide fade" style="z-index:999999;">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							</div>
							<div class="modal-body">
									<p>Are you sure you want to delete this list?</p>
									<%= button_to "Delete List", shopping_list_path(shopping_list), :method => :delete, :class => "btn btn-danger btn-mini" %>
								</div>
							</div>
						</li>

					<% end %>
				</ul>
			</div><!--end well-->
		</div><!--end-->
	</div><!--end row-->
</div><!--end container-->